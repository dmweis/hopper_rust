[Unit]
Description=hopper
After=network-online.target nss-lookup.target sound.target
Wants=network-online.target

[Service]
User=hopper
DynamicUser=yes
Group=audio
StateDirectory=hopper
CacheDirectory=hopper
Type=simple
Restart=on-failure
RestartSec=5s
ExecStart=/usr/bin/hopper --dynamixel-port /dev/dynamixel --config /etc/hopper/settings

[Install]
WantedBy=default.target
